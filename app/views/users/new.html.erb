<% provide(:title, 'Registro') %>
<h1>Registro</h1>
<dic class='row'>
	<div class='spand offset3'>
		<%= form_for(@user) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
